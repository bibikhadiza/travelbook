  <button class="dropbtn">Check into Destination</button>
  <div class="dropdown-content">
    <%Destination.all.each do |des|%>
    <a href="/destinations/<%=des.id%>/posts/new" id="myBtn"><%=des.name%></a>
    <%end%>
    <a href="/posts/new" id="myBtn">Create A new Destination</a>
  </div>
</div>

